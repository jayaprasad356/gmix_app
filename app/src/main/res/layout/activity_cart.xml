<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LiveTrackingActivity">

    <!-- Toolbar Layout -->
    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_left"
            android:backgroundTint="?attr/iconColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivBack"
            android:layout_marginStart="@dimen/_14sdp"
            android:text="Cart"
            android:textSize="@dimen/_14sdp"
            android:textColor="?attr/myTextColor"
            android:fontFamily="@font/poppins_medium" />

    </RelativeLayout>



            <!-- Card View with Item Info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvItem"
                android:layout_below="@+id/rlToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Image Layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/ivItemImage"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/demo_image"
                            android:importantForAccessibility="no" />

                    </LinearLayout>

                    <!-- Text Layout for Item Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tvItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_14sdp"
                            android:textColor="?attr/myTextColor"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvItemWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_10sdp"
                            android:textColor="?attr/textgrey"
                            android:fontFamily="@font/poppins_medium" />

                        <!-- Quantity Layout -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quantity"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="?attr/textgrey"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/tvQuantityVal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:text=""
                                android:textSize="@dimen/_12sdp"
                                android:textColor="?attr/myTextColor"
                                android:fontFamily="@font/poppins_bold" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Fragment Container (outside Card View) -->
            <FrameLayout
                android:layout_below="@+id/cvItem"
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />




</RelativeLayout>
